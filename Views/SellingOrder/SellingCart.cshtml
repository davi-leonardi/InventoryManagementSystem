@using InventoryManSys.Models.ViewModels
@model SellingCartVM

@{
    ViewData["Title"] = "Selling Order";
}

<br />
<h1>Selling Order</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(!Model.Products.Any())
            {
                <p style="color:red">Selling Order is Empty!</p>
            }
        @foreach (var item in Model.Products) {
            <tr>
            <td>
                #@Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <form method="post" asp-action="Delete">
                    <input type="hidden" name="Id" value="@item.Id"/>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
<form method="post" asp-action="ConcludeOrder">
    <input asp-for="@Model.Id" hidden />
    <input asp-for="@Model.Products" hidden/>
    <input asp-for="@Model.TotalPrice" hidden/>
    <input asp-for="@Model.OrderId" hidden />
    @if(!Model.Products.Any())
    {
        <input type="hidden" value="Conclude Order >>" class="btn btn-primary" />
    }
    else
    {
        <input type="submit" value="Conclude Order >>" class="btn btn-primary" />
    }

</form>
