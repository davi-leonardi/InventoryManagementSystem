@model Warehouse

@{
    ViewData["Title"] = "Delete";
}

<br />
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Warehouse</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaxCapacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxCapacity)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if (ViewData["IsEmpty"].ToString() == "False"){
            <p style="color:red">Warehouse is Not Empty</p>
            <input type="submit" disabled value="Delete" class="btn btn-danger" />
        }
        else
        {
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
        | <a asp-action="Index">Back to List</a>
    </form>
</div>
