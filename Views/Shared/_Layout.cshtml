<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryManSys.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Inventory Management System</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        
          <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto">
              <li class="nav-item">
                <a class="nav-link active" href="/">Overview
                  <span class="visually-hidden">(current)</span>
                </a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Orders</a>
                <div class="dropdown-menu">
                  <a class="text-success dropdown-item" asp-controller="PurchaseOrder" asp-action="Index">Purchase Order</a>
                  <a class="text-danger dropdown-item" asp-controller="SellingOrder" asp-action="Index">Selling Order</a>
                  <div class="dropdown-divider"></div>
                  <a class="text-primary dropdown-item" asp-controller="Order" asp-action="Index">List of Orders</a>
                </div>
              </li>
              <li class="nav-item">
                <a class="nav-link"  asp-controller="Category" asp-action="Index">Categories</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Product" asp-action="Index">Products</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Warehouse" asp-action="Index" >Warehouses</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Supplier" asp-action="Index" >Suppliers</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Employee" asp-action="Index">Employees</a>
              </li>
            </ul>
            <partial name="_LoginPartial" />
          </div>
        </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Davi Leonardi Mathey - <a asp-area="Identity" asp-page="/Account/Manage/Index">My Website</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
